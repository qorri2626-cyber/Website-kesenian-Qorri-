        <div class="navigasi">
            <button onclick="geser(-1)">&#10094;</button>
            <button onclick="geser(1)">&#10095;</button>
        </div>
    </div>
    <div class="hasil-pencarian">
        <h2>Hasil Pencarian:</h2>
        <ul id="daftar-hasil"></ul>
    </div>
    <script>
        const galeriWrapper = document.querySelector('.galeri-wrapper');
        const galeriItems = document.querySelectorAll('.galeri-item');
        const pencarianInput = document.querySelector('.pencarian-input');
        const pencarianTombol = document.querySelector('.pencarian-tombol');
        const daftarHasil = document.getElementById('daftar-hasil');

        let index = 0;
        let itemWidth = galeriItems[0].offsetWidth;

        function geser(arah) {
            index += arah;
            if (index < 0) {
                index = galeriItems.length - 1;
            } else if (index >= galeriItems.length) {
                index = 0;
            }
            updateGaleri();
        }

        function updateGaleri() {
            galeriWrapper.style.transform = `translateX(${-index * itemWidth}px)`;
        }

        pencarianTombol.addEventListener('click', function() {
            const keyword = pencarianInput.value.toLowerCase();
            let hasil = [];

            galeriItems.forEach(item => {
                const itemKeyword = item.dataset.keyword.toLowerCase();
                if (itemKeyword.includes(keyword)) {
                    hasil.push(itemKeyword);
                }
            });

            tampilkanHasil(hasil);
        });

        function tampilkanHasil(hasil) {
            daftarHasil.innerHTML = '';
            if (hasil.length === 0) {
                daftarHasil.innerHTML = '<li>Tidak ada hasil ditemukan.</li>';
            } else {
                hasil.forEach(item => {
                    const li = document.createElement('li');
                    li.textContent = item;
                    daftarHasil.appendChild(li);
                });
            }
        }

        // Update itemWidth saat ukuran layar berubah
        window.addEventListener('resize', function() {
            itemWidth = galeriItems[0].offsetWidth;
            updateGaleri();
        });
    </script>
    </header>

